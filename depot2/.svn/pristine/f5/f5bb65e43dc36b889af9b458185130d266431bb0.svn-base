<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
   <mapper namespace="com.ssi.depot.dao.IBackupDAO">
	<resultMap type="Backup" id="supBackup">
		<id column="bacid" property="bacid" jdbcType="int" />
		<result property="bacname" column="bacname"/>
		<result property="bacdescription" column="bacdescription"/>
		<result property="bacpath" column="bacpath"/>
		<result property="bacip" column="bacip"/>
		<result property="bactime" column="bactime"/>
		<result property="bacremark" column="bacremark"/>
		<collection property="supAccount"
			resultMap="com.ssi.depot.dao.IAccountDAO"
		/>
	</resultMap>
	
    <!-- 全体查询数据信息  -->
    <select id='selectBackupAll' resultMap="supBackup">
        SELECT 
        	b.bacid,b.bacname, b.bacdescription,b.bacpath,b.bacip,b.bactime,b.bacremark,
        	a.id,a.username,a.realname,a.role,a.description,a.phone,a.tel,a.email,a.qq,a.state,a.ip,a.createTime,a.updateTime,a.remark
        FROM
        	TBACKUP b
        	LEFT JOIN TACCOUNT a ON b.accid = a.id
        ORDER BY b.bactime DESC
    </select>

    <!-- 插入数据 -->
    <insert id='insertBackup' parameterType='Backup' useGeneratedKeys="true" keyProperty="id" >
      INSERT INTO 
      	TBACKUP(
            accid,
            bacname,
            bacdescription,
            bacpath,
            bacip,
            bacremark
        )VALUES(
            #{accid},
            #{bacname},
            #{bacdescription},
            #{bacpath},
            #{bacip},
            #{bacremark}
	      )
    </insert>
    
    <!-- 删除数据 -->
    <delete id='deleteBackupById' parameterType='int'>
        DELETE FROM TBACKUP WHERE bacid = #{bacid}
    </delete>
    
    <!-- 查询数据id  -->
    <select id='selectBackupById' parameterType='int' resultMap="supBackup">
       SELECT 
        	b.bacid,b.bacname, b.bacdescription,b.bacpath,b.bacip,b.bactime,b.bacremark,
        	a.id,a.username,a.realname,a.role,a.description,a.phone,a.tel,a.email,a.qq,a.state,a.ip,a.createTime,a.updateTime,a.remark
        FROM
        	TBACKUP b
        	LEFT JOIN TACCOUNT a ON b.accid = a.id
		WHERE b.bacid = #{bacid}
    </select>
    
    <!-- 修改用户信息 -->
    <update id="updateBackupById" parameterType="Backup">
    	UPDATE TBACKUP
		SET 
  			accid = #{accid},
  			bacname = #{bacname},
  			bacdescription = #{bacdescription},
  			bacpath = #{bacpath},
  			bacremark = #{bacremark}
		WHERE
			`bacid` = #{bacid}
    </update>
    
    <!-- 分页 -->
    <select id="selectBackupByPage" resultMap="supBackup">
    	SELECT 
        	b.bacid,b.bacname, b.bacdescription,b.bacpath,b.bacip,b.bactime,b.bacremark,
        	a.id,a.username,a.realname,a.role,a.description,a.phone,a.tel,a.email,a.qq,a.state,a.ip,a.createTime,a.updateTime,a.remark
        FROM
        	TBACKUP b
        	LEFT JOIN TACCOUNT a ON b.accid = a.id
        ORDER BY b.bactime DESC
    	LIMIT #{start},#{pageSize}
    </select>
    
</mapper>



















